root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = false
max_line_length = 100
tab_width = 2

[*.less]
indent_size = 2

[*.rs]
max_line_length = 100

[*.sass]
indent_size = 2
indent_style = tab
tab_width = 2

[*.scss]
indent_size = 2

[{*.ats,*.cts,*.mts,*.ts}]
indent_style = tab

[{*.bash,*.sh,*.zsh}]
indent_size = 2
tab_width = 2

[{*.cjs,*.js}]
indent_style = tab

[{*.har,*.jsb2,*.jsb3,*.json,.babelrc,.browserslistrc,.eslintrc,.postcssrc,.posthtmlrc,.prettierrc,.stylelintrc,bowerrc,jest.config}]
indent_size = 2
